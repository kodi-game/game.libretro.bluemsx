<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.bluemsx"
		name="MSX/SVI/ColecoVision/SG-1000 (blueMSX)"
		version="0.0.1.33"
		provider-name="Daniel Vik">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
		<import addon="game.controller.msx.keyboard" version="1.0.0"/>
		<import addon="game.controller.msx.joystick" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms>msx</platforms>
		<extensions>rom|ri|mx1|mx2|dsk|col|sg|sc|cas|m3u</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.bluemsx</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">MSX/SVI/ColecoVision/SG-1000 (blueMSX)</summary>
		<summary lang="es_ES">MSX/SVI/ColecoVision/SG-1000 (blueMSX)</summary>
